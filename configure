#!/bin/sh -eu

PLATFORM=$(uname | tr '[:upper:]' '[:lower:]')
CC=${CC:-cc}
CFLAGS=${CFLAGS:--Wall -Werror -g -pedantic}
LDLIBS=-lm

case $PLATFORM in
	haiku)
		CC=${CXX:-c++}
		CFLAGS="$CFLAGS -std=c++20"
		LDLIBS="$LDLIBS -lbe -lmedia"
		;;
	linux)
		LDLIBS="$LDLIBS $(pkg-config --libs alsa)"
		;;
esac

cat <<EOF | tee config.mk
PLATFORM=$PLATFORM
CC=$CC
CFLAGS=$CFLAGS
LDLIBS=$LDLIBS
EOF
